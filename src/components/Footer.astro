---
import {COPYRIGHT_NAME, GLOBAL_STYLE} from "../consts";
import {Card} from '@koibumi-design/solidjs'
const today = new Date();
---

<footer>
    <Card
            variant={GLOBAL_STYLE}
            id="footer-container"
    >
        &copy; {today.getFullYear()}&nbsp;{COPYRIGHT_NAME}. All rights reserved.
    </Card>
</footer>

<style>
    #footer-container {
        border-bottom-left-radius: 0;
        border-bottom-right-radius: 0;
    }

    footer {
        text-align: center;
    }
</style>